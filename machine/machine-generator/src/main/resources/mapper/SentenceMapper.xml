<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.mapper.SentenceMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.example.pojo.Sentence">
        <result column="id" property="id" />
        <result column="section_key" property="sectionKey" />
        <result column="unit_key" property="unitKey" />
        <result column="sentence" property="sentence" />
        <result column="keyword" property="keyword" />
        <result column="chinese" property="chinese" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id, section_key, unit_key, sentence, keyword, chinese
    </sql>

</mapper>
