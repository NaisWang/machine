<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.server.mapper.MachineDetectionMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.example.server.pojo.MachineDetection">
        <id column="id" property="id" />
        <result column="machine_id" property="machineId" />
        <result column="machine_number" property="machineNumber" />
        <result column="quality_desc" property="qualityDesc" />
        <result column="feature_desc" property="featureDesc" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id, machine_id, machine_number, quality_desc, feature_desc
    </sql>

</mapper>
